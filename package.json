{
	"name": "vetur-typescript-performance-workaround",
	"displayName": "vetur-typescript-performance-workaround",
	"description": "Workaround for the issue with the performance and intelisense speed of vue single file components in vetur when used together with TypeScript.",
	"version": "0.0.1",
	"publisher": "snovakovic",
	"author": {
		"email": "stefan.novakovich@gmail.com",
		"name": "Stefan Novakovic",
		"url": "https://github.com/snovakovic/"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/snovakovic/vtpw",
	},
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:vtpw.toggleShadowTsFile"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vtpw.toggleShadowTsFile",
				"title": "vtpw: toggle between shadow .ts file and .vue file"
			}
		],
		"keybindings": [
      {
        "command": "vtpw.toggleShadowTsFile",
        "key": "ctrl+alt+,",
        "mac": "cmd+alt+l",
        "when": "editorTextFocus"
      }
    ]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.38.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.2.0"
	}
}
